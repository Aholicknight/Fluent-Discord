{
    "private": true,
    "name": "fluent-discord",
    "license": "MIT",
    "author": {
        "name": "TakosThings",
        "url": "https://github.com/TakosThings/Fluent-Discord"
    },
    "repository": "git:TakosThings/Fluent-Discord",
    "os": [
        "win32",
        "linux"
    ],
    "scripts": {
        "build": "sass src/fluent.scss:dist/fluent.theme.css --no-charset --no-source-map",
        "dev": "cross-os xdev",
        "xdev": {
            "win32": "sass src/fluent.scss:%APPDATA%/BetterDiscord/themes/fluent.theme.css --no-charset --no-source-map --watch",
            "linux": "sass src/fluent.scss:$HOME/.config/BetterDiscord/themes/fluent.theme.css --no-charset --no-source-map --watch"
        }
    },
    "devDependencies": {
        "cross-os": "^1.4.0",
        "sass": "^1.49.7"
    }
}
